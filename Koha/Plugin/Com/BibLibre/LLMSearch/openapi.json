{
  "/chat": {
    "post": {
      "x-mojo-to": "Com::BibLibre::LLMSearch::Controller#chat",
      "description": "Called by javascript and transmits request to openai",
      "operationId": "chatWithLLM",
      "tags": [
        "opac"
      ],
      "parameters": [
        {
          "name": "query",
          "in": "body",
          "description": "a query in natural language",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "produces": [
        "application/json"
      ],
      "responses": {
        "200": {
          "description": "reply from LLM"
        },
        "500": {
          "description": "An error occured",
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "description": "An explanation for the error",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
